<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Contoh TextView yang bisa mewakili nama pesanan atau detail lain -->
    <TextView
        android:id="@+id/textView_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pesanan"
        android:layout_marginEnd="16dp" />

    <!-- Contoh TextView lain yang bisa mewakili status atau jumlah pesanan -->
    <TextView
        android:id="@+id/textView_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Pesanan" />

    <!-- Tambahkan elemen lain yang diperlukan untuk desain item Anda -->

</LinearLayout>
